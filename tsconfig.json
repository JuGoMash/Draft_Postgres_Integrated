{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "server",
    "shared"
  ],
  "exclude": [
    "node_modules"
  ]
}